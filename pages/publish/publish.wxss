/* pages/publish/publish.wxss */
page{
  display: flex;
  height: 100%;
  flex-direction: column;
}



.container{
  flex: 1;
  overflow: scroll;
  /* padding: 27rpx; */
}
.tabbar{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-bottom: 51rpx;
}
.tabbar .tabbar_item{
  /* background-color: red; */
  flex: 1;
}
.pt-textarea{
  margin-bottom: 30rpx;
	font-size: 27rpx;
}
.pt-textarea::placeholder{
	color: #666666;
}

.form-lists{
  padding: 0;
}

.form-list{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 27rpx;
  color: #333333;
  border-bottom: 1rpx solid #e9e9e9;
  position: relative;
}
.form-list:active{
  background-color: #eee;
}
.iconfont{
  color: #666;
}
.form-list .icon-right{
  color: #666;
  font-size: 27rpx;
  position: absolute;
  top: 0;
  right: 27rpx;
}

.form-list:last-child{
  border-bottom: none;
}

.form-list_input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.form-list_input::placeholder{
	font-family: PingFang-SC-Regular;
	font-size: 30rpx;
	color: #999999;
}