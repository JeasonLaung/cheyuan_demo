/* pages/detail/detail.wxss */
page{
  background-color: #f2f2f2;
}
.ask-car{
  padding: 28rpx  26rpx 26rpx;
  background-color: #fff;
  margin-bottom: 30rpx;

}

.ask-car_header{
  border-bottom: 1rpx solid #e9e9e9;
  padding-bottom: 25rpx;
  font-weight: bold;
  color: #333333;
  font-family: PingFang-SC-Medium;
	font-size: 31rpx;
  position: relative;
}
.ask-car_info{
  margin: 26rpx  0 37rpx;
  font-size: 27rpx;
  color: #666;
}
.ask-car_info__item{
  display: flex;
  justify-content: space-between;
  height: 45rpx;
  line-height: 45rpx;
}
/* .ask-car_info__item + .ask-car_info__item{
  margin-top: 16rpx;
} */
.ask-car_info__datetime{
  color: #999;
}
.ask-car_header .icon-right{
  position: absolute;
  right: 27rpx;
  font-size: 27rpx;
  color: #999;
  transform: translateY(-13rpx);
}

.ask-car_info__price{
  font-family: PingFang-SC-Bold;
	font-size: 36rpx;
	color: #df5064;
  font-weight: bolder;
}

.ask-car_action{
  border: 1rpx solid #e9e9e9;
  display: flex;
  text-align: center; 
  
}
.ask-car_note{
  
  font-family: PingFang-SC-Regular;
	font-size: 27rpx;
	color: #666666;
}
.ask-car_note__text{
  margin-top: 30rpx;
  padding: 25rpx 28rpx;
  font-family: PingFang-SC-Regular;
	font-size: 27rpx;
	color: #666666;
  background-color: #f7f7f7;
}



/* 报价 */
.price-recept{
  background-color: #fff;
  padding: 0 27rpx;

}
.price-recept_header{
  height: 85rpx;
  line-height: 85rpx;
	font-family: PingFang-SC-Medium;
  font-weight: bold;
	font-size: 30rpx;
	color: #333333;
  border-bottom: 1rpx solid #e9e9e9;
  
}
.price-recept_list{
  padding: 25rpx 0;
  border-bottom: 1rpx solid #e9e9e9; 
}
.price-recept_list__header{
  display: flex;
  justify-content: space-between;
	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
  font-weight: bold;
	color: #666666;
}
.price-recept_list__header--datetime{
	font-family: PingFang-SC-Regular;
	font-size: 24rpx;
	color: #999999;
  font-weight: normal;
}

.price-recept_list__price{
	font-family: PingFang-SC-Bold;
	font-size: 36rpx;
	color: #4394ff;
  margin: 28rpx 0 24rpx;
}
.price-recept_list__price text{
	font-family: PingFang-SC-Bold;
	font-size: 36rpx;
  font-weight: bolder;
	color: #4394ff;
}
.price-recept_info{
  padding: 0 26rpx;
}
.price-recept_list__note{
  padding: 17rpx 27rpx;
	font-family: PingFang-SC-Regular;
	font-size: 27rpx;
	color: #666666;
  background-color: #f7f7f7;
	border-radius: 6rpx;
}